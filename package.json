{
  "name": "pairist",
  "version": "1.0.0",
  "private": true,
  "description": "Pairing board for the modern era.",
  "author": "Luan Santos <cfcluan@gmail.com>",
  "scripts": {
    "clean": "yarn rimraf dist",
    "e2e": "vue-cli-service test:e2e --mode=e2e",
    "test": "vue-cli-service test:unit",
    "lint": "vue-cli-service lint",
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "build:funcs": "scripts/build-functions",
    "deploy:funcs": "yarn build:funcs && firebase deploy -P $TARGET_ENV",
    "migrate": "node migrations/migrate.js $TARGET_ENV",
    "deploy": "scripts/deploy",
    "deploy:staging": "TARGET_ENV=staging yarn deploy",
    "deploy:e2e": "TARGET_ENV=e2e yarn deploy",
    "deploy:production": "TARGET_ENV=production yarn deploy"
  },
  "lint-staged": {
    "*.js": [
      "vue-cli-service lint"
    ],
    "*.vue": [
      "vue-cli-service lint"
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "gitHooks": {
    "pre-commit": "chmod a-w migrations/*.migration.js && lint-staged"
  },
  "dependencies": {
    "@firebase/app-types": "^0.3.3",
    "babel-polyfill": "^6.26.0",
    "big-integer": "^1.6.41",
    "firebase": "^5.8.2",
    "firebase-admin": "^7.0.0",
    "firebase-functions": "^2.2.0",
    "immutable": "^4.0.0-rc.9",
    "interact.js": "^1.2.8",
    "js-combinatorics": "^0.5.3",
    "lodash": "^4.17.4",
    "munkres-js": "^1.2.2",
    "pluralize": "^7.0.0",
    "vue": "^2.6.1",
    "vue-moment": "^4.0.0",
    "vue-router": "^3.0.2",
    "vuedraggable": "^2.17.0",
    "vuetify": "^1.4.6",
    "vuex": "^3.1.0",
    "vuexfire": "^2.3.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.3.1",
    "@mdi/font": "^3.4.93",
    "@vue/cli-plugin-babel": "^3.4.0",
    "@vue/cli-plugin-e2e-nightwatch": "^3.4.0",
    "@vue/cli-plugin-eslint": "^3.4.0",
    "@vue/cli-plugin-unit-jest": "^3.4.0",
    "@vue/cli-service": "^3.4.0",
    "@vue/eslint-config-standard": "^4.0.0",
    "@vue/server-test-utils": "^1.0.0-beta.29",
    "@vue/test-utils": "^1.0.0-beta.29",
    "babel-core": "^7.0.0-0",
    "babel-jest": "^24.0.0",
    "babel-loader": "^8.0.5",
    "babel-plugin-transform-inline-environment-variables": "^0.4.3",
    "cpx": "^1.5.0",
    "eslint-plugin-lodash": "^5.1.0",
    "eslint-plugin-lodash-fp": "^2.2.0-a1",
    "firebase-mock": "^2.0.20",
    "flush-promises": "^1.0.0",
    "lint-staged": "^8.1.3",
    "mkdirp": "^0.5.1",
    "request": "^2.83.0",
    "rimraf": "^2.6.3",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.1",
    "vue-cli-plugin-vuetify": "^0.4.6",
    "vue-server-renderer": "^2.6.1",
    "vue-template-compiler": "^2.6.1",
    "vuetify-loader": "^1.2.0"
  }
}
